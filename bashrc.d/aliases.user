#---MJH's personal aliases---
alias	a	'alias'
alias	cl	clear
alias 	lld	'ls -ld $1'
alias	lm	'ls -l |more'
alias	ll	'ls -l --color'
alias	llsys	'ls -la .c* .l* .a*'
alias	la	'ls -la'
alias	dir 	ll  
alias	cll	'clear; ll'
